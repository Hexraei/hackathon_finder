# HackFind Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# TiDB Cloud Connection (Required for cloud)
# ===========================================
TIDB_HOST=gateway01.ap-southeast-1.prod.aws.tidbcloud.com
TIDB_PORT=4000
TIDB_USER=your-prefix.root
TIDB_PASSWORD=your-password
TIDB_DATABASE=test

# Optional: Path to TiDB CA certificate for SSL
# TIDB_SSL_CA=./ca.pem

# Set to 'true' to use TiDB instead of SQLite
USE_TIDB=false

# ===========================================
# Gemini API (Required for AI Search)
# ===========================================
GEMINI_API_KEY=your-gemini-api-key
